{
  "extends": ["next", "next/core-web-vitals", "prettier"],
  "rules": {
    // import の順番をルール化
    // 参考：https://github.com/benmosher/eslint-plugin-import/blob/master/docs/rules/order.md
    "import/order": [
      "error",
      {
        "alphabetize": {
          "order": "asc"
        }
      }
    ],
    // 依存関係の警告を無効にする
    "react-hooks/exhaustive-deps": "off"
  }
}
